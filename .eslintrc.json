{
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "rules": {
        "no-console": 1
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "import/resolver": {
            "alias": {
              "map": [
                ["@models", "./src/models/"],
                ["@controllers", "./src/controllers/"],
                ["@routers", "./src/routers/"],
                ["@utils", "./src/utils/"]
              ]
            }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    }
}